{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": "Claim Progress Blocks with Timestamps",
  "data": [
    {
      "name": "claim_events",
      "url": {
        "index": "test_index",
        "body": {
          "size": 100,
          "query": {
            "bool": {
              "filter": [
                { "term": { "icn_number": "12345" } }
              ]
            }
          }
        }
      },
      "format": { "property": "hits.hits" },
      "transform": [
        {
          "type": "project",
          "fields": ["_source.event_action", "_source.timestamp"],
          "as": ["event_action", "timestamp"]
        }
      ]
    },
    {
      "name": "blocks",
      "values": [
        { "block": "block1", "event_action": "claim received", "order": 1 },
        { "block": "block2", "event_action": "claim loaded to db", "order": 2 },
        { "block": "block3", "event_action": "dupe claim event published", "order": 3 },
        { "block": "block4", "event_action": "dupe-claim-events-published", "order": 4 }
      ]
    },
    {
      "name": "block_status",
      "source": "blocks",
      "transform": [
        {
          "type": "lookup",
          "from": "claim_events",
          "key": "event_action",
          "fields": ["event_action"],
          "as": ["match"]
        },
        {
          "type": "formula",
          "as": "color",
          "expr": "datum.match != null ? (datum.event_action == 'dupe-claim-events-published' ? '#ff0000' : '#3cb371') : '#d3d3d3'"
        },
        {
          "type": "formula",
          "as": "timestamp",
          "expr": "datum.match != null ? datum.match.timestamp : ''"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": { "data": "block_status" },
      "encode": {
        "enter": {
          "x": { "value": 20 },
          "y": { "field": "order", "mult": 50 },
          "width": { "value": 320 },
          "height": { "value": 40 },
          "fill": { "field": "color" },
          "stroke": { "value": "#333" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "block_status" },
      "encode": {
        "enter": {
          "x": { "value": 35 },
          "y": { "field": "order", "mult": 50, "offset": 25 },
          "text": { "signal": "datum.block + ' | ' + datum.event_action + (datum.timestamp ? ' (' + datum.timestamp + ')' : '')" },
          "fill": { "value": "#000" },
          "fontSize": { "value": 16 }
        }
      }
    }
  ],
  "width": 380,
  "height": 230
}
